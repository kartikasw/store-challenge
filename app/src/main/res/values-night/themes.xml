<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Storechallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="editTextStyle">@style/Widget.StoreChallenge.EditText</item>
        <item name="checkboxStyle">@style/Widget.StoreChallenge.CheckBox</item>
    </style>

    <style name="Theme.StoreChallenge.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.StoreChallenge</item>
    </style>

    <!-- Button -->
    <style name="Widget.StoreChallenge.MenuButton" parent="Widget.AppCompat.TextView">
        <item name="android:drawablePadding">@dimen/component_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.StoreChallenge.Body2</item>
        <item name="android:width">100dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.StoreChallenge.StoreMenuButton" parent="Widget.AppCompat.TextView">
        <item name="android:drawablePadding">@dimen/component_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.StoreChallenge.Body2</item>
        <item name="android:width">90dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.StoreChallenge.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.StoreChallenge.Button</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Background -->
    <style name="ItemStoreCard">
        <item name="android:background">@color/black</item>
    </style>

    <style name="MapsBackground">
        <item name="android:background">#393939</item>
    </style>

    <style name="MenuBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TextAppearance.StoreChallenge.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.StoreChallenge.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.StoreChallenge.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.StoreChallenge.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.StoreChallenge.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.StoreChallenge.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.StoreChallenge.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>